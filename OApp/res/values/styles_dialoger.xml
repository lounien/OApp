<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DialogerNoAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
    
    <style name="DialogerOnBottomAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialoger_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/dialoger_top_to_bottom</item>
    </style>
    
    <style name="DialogerFadeAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialoger_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialoger_fade_out</item>
    </style>

</resources>