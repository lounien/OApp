<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.mutils.app.demo"
    style="@style/Fill" >

    <cn.mutils.app.ui.IndexView
        android:id="@+id/index_view"
        style="@style/Wrap"
        android:layout_centerInParent="true"
        android:background="#FFF"
        android:padding="8dp"
        app:bgColor="#B2B2B2"
        app:strokeColor="#8EC43E"
        app:strokeWidth="8dp" />

    <TextView
        android:id="@+id/selected_index_plus"
        style="@style/MainBtn"
        android:layout_below="@id/index_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin"
        android:text="SelectedIndex++" />

</RelativeLayout>