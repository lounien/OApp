<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="TitleBox">
        <item name="android:id">@id/title_box</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_box_size</item>
        <item name="android:background">@color/title_box</item>
    </style>
    
    <style name="TitleBoxButton">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/title_box_size</item>
        <item name="android:layout_height">@dimen/title_box_size</item>
        <item name="android:background">@drawable/bg_clickable</item>
        <item name="android:padding">@dimen/padding</item>
    </style>
    
    <style name="TitleBoxName" parent="Wrap">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">@dimen/title_box_size</item>
        <item name="android:layout_marginRight">@dimen/title_box_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">@dimen/title_box_text_size</item>
        <item name="android:id">@id/title_box_name</item>
    </style>
    
    <style name="TitleBoxText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/title_box_size</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:paddingRight">@dimen/paddingRight</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_clickable</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="TitleBoxBackButton" parent="TitleBoxButton">
        <item name="android:id">@id/title_box_back</item>
        <item name="android:src">@drawable/ic_title_box_back</item>
    </style>
    
</resources>